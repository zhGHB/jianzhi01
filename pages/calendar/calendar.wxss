.day{
    width: 101.4rpx;
    height: 107rpx;
    line-height: 107rpx;
    text-align: center;
    display: inline-block;
    position: relative;
    top: 0;
    margin-top: -10rpx;
    overflow: hidden;
    color: #353535;
    font-size: 34rpx;
}
.day-num,.day-active{
    width: 100%;
    height: 30rpx;
}
.day-active{
    font-size: 24rpx;
    color:#f4aa81;
}
.day2{
    color: #04babe;
