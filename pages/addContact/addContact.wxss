page {
	background: #F5EFEF
}
.item {
	padding-left: 54rpx;padding-right: 22rpx;
	font-size:0;padding-top: 20rpx;padding-bottom: 20rpx;
	border-bottom: 1px solid #E4E0E0;
}
.name-text {
	font-size:32rpx;color:#080808;font-weight: bold;
}
.input {
	text-align: right;font-size:28rpx;color:#827F7F;
	width:100%;font-weight: bold;
}
.item-box {
	margin:20rpx;
}
.right-text {
	font-size:28rpx;color:#2D2C2C;font-weight: bold;
	text-align: right;
}
.text-right {
	text-align: right;
	display: flex;justify-content: flex-end;
}
.btn-box {
	text-align: center;font-size:42rpx;font-weight: bold;
	margin-left: 33rpx;margin-right: 33rpx;margin-top: 35rpx;color:#fff;
}
.down-img {
	width:21rpx;height: 13rpx;
	transition:  all 1s;
}
.rote {
	transform: rotate(-90deg);
}

.pick-box {
	position: fixed;
	bottom: -400rpx;
	width:100%;height: 400rpx;
	background: #fff;
	transition: all 1s;
}
.pick-box.active {
	bottom: 0;
}
.btn-box {
	color:#717171;font-size:34rpx;padding:16rpx;
}
.confirm {
	color:#EA5504;
}
.picker-style {
	height: 300rpx;text-align: center;
}
.picker-item {
	font-size:28rpx;color:#000;
}
.item-text {
	border-bottom: 1px solid #EA5504;
	display: inline-block;
	height: 50rpx;line-height: 50rpx;padding:0 40rpx;
}
