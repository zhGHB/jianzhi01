.login-bg {
	width:100%;height: 327rpx;
}
.top {
	position: relative;
}
.top-content {
	position: absolute;top:0;left: 0;right: 0;bottom: 0;
}
.login-btn {
	width:217rpx;height: 53rpx;line-height: 53rpx;text-align: center;
	font-size:33rpx;border-radius: 10rpx;
}
.avatar {
	width:166rpx;height: 166rpx;border-radius: 50%;
}
.user-info-box {
	text-align: center;font-size:0;
}
.user-name {
	font-size:30rpx;color:#000;font-weight: bold;margin:13rpx 0;
}
.user-count {
	font-size:28rpx; color:#878787;font-weight: 100;
}

/*列表*/
.item-box {
	border-top:12rpx solid #F5EFEF;
}
.item {
	height: 66rpx;padding:0 75rpx 0 43rpx;border-bottom: 1px solid #E4E0E0;
}
.item-name {
	font-size:32rpx;color:#000;
}
