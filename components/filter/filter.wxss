/* components/filter/filter.wxss */
@import '../../app.wxss';
.tab-box {
	font-size:28rpx;color:#242424;font-weight: 400;border-bottom:1px solid #BFBFBF;
	padding:20rpx 0;
}
.active {
	color:#D65007;
}
.pick-box {
	position: fixed;
	bottom: 0rpx;
	width:100%;height: 400rpx;
	border:1px solid red;background: #fff;
	transition: all 1s;
}
.pick-box.active {
	bottom: 0;
}
.btn-box {
	color:#717171;font-size:34rpx;padding:16rpx;
}
.confirm {
	color:#EA5504;
}