<!-- tab -->
<view class="tab-box flex">
	<view class="flex1 alignCenter flex-center flex {{tabIndex == 0?'active':''}}" bindtap="filter" data-id="0">
		<text class="tab-text" >所有活动</text>
	</view>
	<view class="flex1 alignCenter flex-center flex {{tabIndex == 1?'active':''}}" bindtap="filter" data-id="1">
		<text class="tab-text">城市</text>
	</view>
	<view class="flex1 alignCenter flex-center flex {{tabIndex == 2?'active':''}}" bindtap="filter" data-id="2">
		<text class="tab-text">活动天数</text>
	</view>
	<view class="flex1 alignCenter flex-center flex {{tabIndex == 3?'active':''}}" bindtap="filter" data-id="3">
		<text class="tab-text">排序</text>
	</view>
</view>
<!-- tab -->
<view class="pick-box {{pickActive?'active':''}}">
	<view class="btn-box flex flex-bettewn">
		<view bindtap="cancel">取消</view>
		<view class="confirm" bindtap="confirm">确认</view>
	</view>
	<!-- 价格排序 -->
	<view class="price-box pick-item-box" wx:if="{{tabIndex == 3}}">
		<picker-view indicator-style="height: 50px;" class="picker-style" 
		         value="{{value}}" bindchange="bindChangePrice"
		  >
		    <picker-view-column>
		      <view wx:for="{{price}}" style="line-height: 50px" class="picker-item">
		      		<text class="item-text">{{item.name}}</text>
		      </view>
		    </picker-view-column>
		  </picker-view>
	</view>
	<!-- 价格排序 -->
</view>